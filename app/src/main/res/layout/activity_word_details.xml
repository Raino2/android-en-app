<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".WordDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="technology"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            />

        <ImageView
            android:id="@+id/word_play_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/volume"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom"
            />

        <ImageView
            android:id="@+id/collection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/collect"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n. 技术；工艺；术语"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#AEABAB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图文例句"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modern technology catalyzed tremendous economic growth in China."
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现代技术促成了中国经济的巨大发展。"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/technology"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#AEABAB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文释义"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the discipline dealing with the art or science of applying scientific knowledge to practical problems"
            android:layout_marginTop="20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#AEABAB"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/tv_understand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="掌握"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn_going"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="继续学习"
            android:textSize="20sp"
            />

    </LinearLayout>
</LinearLayout>