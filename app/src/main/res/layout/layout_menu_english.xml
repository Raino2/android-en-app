<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.example.eva.TextImageView.TextImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/cat"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="cherry"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />


        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/message"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Messages"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />
        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_person"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Personal Center"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />
        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_collection"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/collect"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Collection"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />

        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_plan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/learning_plan"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Learning Plan"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />

        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_notebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/book"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Note"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />

        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_set"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/sett"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Setting"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />
        <com.example.eva.TextImageView.TextImageView
            android:id="@+id/slide_kefu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/kefu"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Service"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:drawableLeftHeight="30dp"
            app:drawableLeftWidth="30dp"
            app:drawableRightHeight="20dp"
            />

        </LinearLayout>

</ScrollView>